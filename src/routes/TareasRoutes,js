// routes/tareaRoutes.js
const express = require('express');
const router = express.Router();
const tareaController = require('../controllers/tareaController');

// Ruta para crear una nueva tarea
router.post('/tarea', tareaController.crearTarea);

// Ruta para obtener todas las tareas de un proyecto
router.get('/tareas', tareaController.obtenerTareas);

// Ruta para obtener una tarea por ID
router.get('/tarea/:id', tareaController.obtenerTareaPorId);

// Ruta para actualizar una tarea
router.put('/tarea/:id', tareaController.actualizarTarea);

// Ruta para eliminar una tarea
router.delete('/tarea/:id', tareaController.eliminarTarea);

module.exports = router;
